<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindDriveApp.Views.UserProfilePage"
             Title="Профиль">
    <ContentPage.Content>

        <Grid RowDefinitions="40,40" ColumnDefinitions="*,*" ColumnSpacing="5">
            <Label Grid.Row="0" Grid.Column="0" Text="Логин:"/>
            <Label Grid.Row="0" Grid.Column="1" Text="{Binding UserName}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>