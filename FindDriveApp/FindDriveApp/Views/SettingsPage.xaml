<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindDriveApp.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Настройки используются исключительно для тестового режима!"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <Button 
                Text="Очистить Storage" 
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"
                Command="{Binding ClearSecureStoreCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>